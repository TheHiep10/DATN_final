<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".room.member.DetailActivity"
    android:orientation="vertical">

    <com.example.afinal.custom_textView.RobotoBlackTextView
        android:id="@+id/header_info_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textStyle="bold"
        android:text="Thông tin thành viên"
        android:textColor="@color/white"
        android:background="@drawable/bg_header"
        android:gravity="center"
        android:textSize="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textinfoname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:text="Họ và Tên:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/lavender"/>
        <TextView
            android:id="@+id/infoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:text="Đỗ Thế Hiệp"
            android:textColor="@color/lavender"
            android:layout_toEndOf="@+id/textinfogender"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textinfogender"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Giới tính: "
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/textinfoname"/>
        <TextView
            android:id="@+id/infogender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Nam"
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/textinfogender"
            android:layout_below="@+id/infoname"/>
        <TextView
            android:id="@+id/textinfodate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ngày sinh: "
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/textinfogender"/>
        <TextView
            android:id="@+id/infodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="27/07/2001"
            android:textColor="@color/lavender"
            android:layout_toEndOf="@+id/textinfodate"
            android:layout_below="@+id/infogender"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textinfoaddress"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Quê quán: "
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/textinfodate"/>
        <TextView
            android:id="@+id/infoaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Đồng Nai"
            android:textColor="@color/lavender"
            android:layout_toEndOf="@+id/textinfoaddress"
            android:layout_below="@+id/infodate"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textinfophone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Số điện thoại: "
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/textinfoaddress"/>
        <TextView
            android:id="@+id/infophone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="0925462529"
            android:textColor="@color/lavender"
            android:layout_toEndOf="@+id/textinfophone"
            android:layout_below="@+id/infoaddress"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textinfostarttime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ngày bắt đầu: "
            android:textColor="@color/lavender"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/textinfophone"/>
        <TextView
            android:id="@+id/infostarttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="20/10/2023"
            android:textColor="@color/lavender"
            android:layout_toEndOf="@+id/textinfostarttime"
            android:layout_below="@+id/infophone"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>